<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>

	<!-- FSFButcher 995 (FSF Complex Jobs)
 
		Default Priority Order

			Core - DoBillsButcherFlesh 90 (Moved to FSFButcher)
			Vanilla Factions Expanded Ancients - VFEA_DoBillsAncientCookingStation 50 (Duplicated Task)

	-->
			
		<!-- Biotech Mechanoids Patch -->
			
			<li Class="PatchOperationConditional">		
				<xpath>/Defs/ThingDef/race/mechEnabledWorkTypes [li [text()="Cooking"] ]</xpath>
				<match Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef/race/mechEnabledWorkTypes [li [text()="Cooking"] ]</xpath>
					<value>
						<li>FSFButcher</li>
					</value>
				</match>
			</li>
			
			<li MayRequire="imranfish.xmlextensions" Class="PatchOperationConditional">		
				<xpath>/Defs/ThingDef/race/mechEnabledWorkTypes [li [text()="Cooking"] ]</xpath>
				<match Class="XmlExtensions.PatchOperationSafeAddOrReplace">
					<xpath>/Defs/ThingDef/race [mechEnabledWorkTypes/li [text()="Cooking"] ]</xpath>
					<compare>Both</compare>
					<value>
						<mechWorkTypePriorities>
							<FSFButcher>3</FSFButcher>
						</mechWorkTypePriorities>
					</value>
				</match>
			</li>
			
		<!-- ABF Artificial Beings Framework Patch -->
			
			<li MayRequire="Killathon.ArtificialBeings" Class="PatchOperationConditional">		
				<xpath>/Defs/AlienRace.ThingDef_AlienRace/modExtensions/li[@Class = "ArtificialBeings.ABF_ArtificialPawnExtension"]/inherentWorkTypes [li [text()="Cooking"] ]</xpath>
				<match Class="PatchOperationAdd">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace/modExtensions/li[@Class = "ArtificialBeings.ABF_ArtificialPawnExtension"]/inherentWorkTypes [li [text()="Cooking"] ]</xpath>
					<value>
						<li>FSFButcher</li>
					</value>
				</match>
			</li>
			
			<li MayRequire="Killathon.ArtificialBeings" Class="PatchOperationConditional">		
				<xpath>/Defs/AlienRace.ThingDef_AlienRace/modExtensions/li[@Class = "ArtificialBeings.ABF_ArtificialPawnExtension"]/forbiddenWorkTypes [li [text()="Cooking"] ]</xpath>
				<match Class="PatchOperationAdd">
					<xpath>/Defs/AlienRace.ThingDef_AlienRace/modExtensions/li[@Class = "ArtificialBeings.ABF_ArtificialPawnExtension"]/forbiddenWorkTypes [li [text()="Cooking"] ]</xpath>
					<value>
						<li>FSFButcher</li>
					</value>
				</match>
			</li>
			
		<!-- Asimov Automation Patch -->
			
			<li MayRequire="Neronix17.Asimov" Class="PatchOperationConditional">		
				<xpath>/Defs/ThingDef/comps/li[@Class = "Asimov.CompProperties_Automaton"]/enabledWorkTypes [li [text()="Cooking"] ]</xpath>
				<match Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef/comps/li[@Class = "Asimov.CompProperties_Automaton"]/enabledWorkTypes [li [text()="Cooking"] ]</xpath>
					<value>
						<li>FSFButcher</li>
					</value>
				</match>
			</li>
			
		<!-- Core - Do Bills Butcher Flesh -->
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName = "DoBillsButcherFlesh"]/workType</xpath>
				<value>
					<workType>FSFButcher</workType>
				</value>
			</li>
			
		<!-- Vanilla Factions Expanded Ancients - Do Bills at Ancient Stove (Duplicated Task) -->
			
			<li MayRequire="VanillaExpanded.VFEA" Class="PatchOperationAdd">
				<xpath>/Defs</xpath>
				<value>					
					<WorkGiverDef>
						<defName>FSFVFEA_DoBillsAncientCookingStation</defName>
						<label>work at ancient cooking station</label>
						<giverClass>WorkGiver_DoBill</giverClass>
						<workType>FSFButcher</workType>
						<priorityInType>50</priorityInType>
						<fixedBillGiverDefs>
							<li>VFEA_AncientCookingStation</li>
						</fixedBillGiverDefs>
						<verb>work</verb>
						<gerund>working at</gerund>
						<requiredCapacities>
							<li>Manipulation</li>
						</requiredCapacities>
						<prioritizeSustains>true</prioritizeSustains>
					</WorkGiverDef>
				</value>
			</li>
			
		</operations>
	</Operation>
				
</Patch>