<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<XmlExtensions.SettingsMenuDef>
		<defName>FrozenSnowFoxComplexJobsSettings</defName> <!--Can be anything unique with no periods-->
		<modId>FrozenSnowFox.FrozenSnowFoxComplexJobs</modId> <!--MUST be the same as the one entered earlier-->    
		<label>FrozenSnowFox Complex Jobs</label> <!-- This is what displays as your mod's name-->    
		<settings> <!--This is where you define what settings are in the settings menu-->

			<li Class="XmlExtensions.Setting.SetColor">
				<color>(187,0,0)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>For any changed settings to take effect the game must be restarted.\nIf you enable new Worktypes midsave you must replace your existing mechanoids for them to get the new Worktypes.</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>FSFComplexJobsModWarning</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor"/>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>
			
			<li Class="XmlExtensions.Setting.Text">
				<text>Complex Jobs Settings</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>FSFComplexJobsSettingsTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>
			
			<!-- Anomaly Tasks In Dark Study -->
			
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="XmlExtensions.Setting.Checkbox">
				<label>Anomaly Tasks In Dark Study</label>
				<key>FSFAnomalyTasksInDarkStudy</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFComplexJobsAnomalyTasksInDarkStudyTitle</tKey>
			</li>
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="XmlExtensions.Setting.SetColor">
				<color>(163,177,188)</color>
			</li>
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="XmlExtensions.Setting.Text">
				<text>Moves all the Anomaly related tasks from other worktypes into Dark Study and changes the worktype requirements to include Social.</text>
				<tKey>FSFComplexJobsAnomalyTasksInDarkStudyDesc</tKey>
			</li>
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="XmlExtensions.Setting.SetColor"/>
			<li MayRequire="Ludeon.RimWorld.Anomaly" Class="XmlExtensions.Setting.GapLine">
				<spacing>12</spacing>
			</li>
			
			<!-- Drafted Work Tasks -->
			
			<li Class="XmlExtensions.Setting.Checkbox">
				<label>Drafted Work Tasks</label>
				<key>FSFDraftedWorkTasks</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFComplexJobsDraftedWorkTasksTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor">
				<color>(163,177,188)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>Changes all work tasks so they can be done while drafted.  Making it so you no longer need to undraft and redraft pawns to perform a task.\nNote: A few tasks may still not be usable while being drafted and some tasks may forcibly undraft a pawn to perform them.</text>
				<tKey>FSFComplexJobsDraftedWorkTasksDesc</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor"/>
			<li Class="XmlExtensions.Setting.GapLine">
				<spacing>12</spacing>
			</li>
			
			<!-- Rescue In Firefighting -->
			
			<li Class="XmlExtensions.Setting.Checkbox">
				<label>Rescue In Firefighting</label>
				<key>FSFRescueInFirefighting</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFComplexJobsRescueInFirefightingTitle</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor">
				<color>(163,177,188)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>Adds a duplicated task of Rescue to Firefighting.  This will cause people on the firefighting worktype to first rescue downed allies before attempting to fight fires.\nNote: Although this is intended to be an alternative to the Rescue worktype both options can be enabled without issue.</text>
				<tKey>FSFComplexJobsRescueInFirefightingDesc</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor"/>
			<li Class="XmlExtensions.Setting.GapLine">
				<spacing>12</spacing>
			</li>
			
			<!-- Ideoligion Roles Are Capable -->
			
			<li MayRequire="Ludeon.RimWorld.Ideology" Class="XmlExtensions.Setting.Checkbox">
				<label>Ideoligion Roles Are Capable</label>
				<key>FSFIdeoRolesAreCapable</key>
				<defaultValue>false</defaultValue>
				<tKey>FSFComplexJobsIdeoRolesAreCapableTitle</tKey>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology" Class="XmlExtensions.Setting.SetColor">
				<color>(163,177,188)</color>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology" Class="XmlExtensions.Setting.Text">
				<text>Removes all the disabled worktypes from all ideoligion roles.</text>
				<tKey>FSFComplexJobsIdeoRolesAreCapableDesc</tKey>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology" Class="XmlExtensions.Setting.SetColor"/>
			<li MayRequire="Ludeon.RimWorld.Ideology" Class="XmlExtensions.Setting.GapLine">
				<spacing>12</spacing>
			</li>
			
			<!-- Mechanoids Are Capable -->
			
